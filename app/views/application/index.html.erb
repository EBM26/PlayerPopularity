<table>

  <thead>
    <tr>
      <th> Name </th>
      <th> Twitter</th>
      <th> Score</th>
    </tr>
  </thead>
  
  <% @player.each do |p| %>
    <tr>
      <td> <%= p.name %> </td>
      <td> <%= p.twitter_handle %> </td>
      <td> <%= p.current_mentions %> </td>
    </tr>
  <% end %>

</table>

